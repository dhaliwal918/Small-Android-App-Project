<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/bg_alert_dialog_box"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageView"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/greentick" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="19sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/congratulations_for_showing_up_today" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="15sp"
        android:layout_gravity="center"
        android:text="@string/how_is_the_android_dev_journey_is_going_on" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnFeedback"
            android:layout_width="0sp"
            android:layout_height="70sp"
            android:textSize="16sp"
            android:layout_margin="10sp"
            android:backgroundTint="#ff0000"
            android:textColor="#000000"
            android:layout_weight="1"
            android:text="@string/send_feedback" />

        <Button
            android:id="@+id/btnGood"
            android:layout_width="0sp"
            android:textSize="16sp"
            android:layout_height="70sp"
            android:layout_margin="10sp"
            android:backgroundTint="#14B514"
            android:layout_weight="1"
            android:textColor="#000000"
            android:text="@string/to_good" />
    </LinearLayout>


</LinearLayout>